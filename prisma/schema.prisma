// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
	shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  firstName String
  lastName  String
  password  String
}

model Habit {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  frequency   String[]
  color       String
	status			Json
}

model Year {
	number Int  @id
	weeks Week[]
}

model Week {
	id Int @id @default(autoincrement())
	year Year @relation(fields: [yearNum], references: [number])
	yearNum Int
	Monday			Json
	Tuesday			Json
	Wednesday			Json
	Thursday			Json
	Friday			Json
	Satday			Json
	Sunday			Json
}

